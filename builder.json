{
    "name": "aws-crt-dotnet",
    "build_steps": [
        "dotnet build -f netstandard2.0 -v normal -p:PlatformTarget={platform_target} {dotnet_args}",
        "dotnet pack -p:TargetFrameworks=netstandard2.0 -p:PlatformTarget={platform_target} ."
    ],
    "test_steps": [
        "dotnet test tests/tests.csproj -v normal -p:PlatformTarget={platform_target} -f netcoreapp3.1"
    ],
    "imports": [
        "dotnetcore"
    ],
    "variables": {
        "platform_target": "x64",
        "dotnet_args": ""
    },
    "hosts": {
        "al2": {
            "packages": [
                "libicu",
                "zlib",
                "libcurl"
            ]
        }
    },
    "targets": {
        "linux": {
            "imports": [
                "s2n"
            ],
            "variables": {
                "dotnet_args": "-p:LibCryptoPath={source_dir}/{libcrypto_path}"
            },
            "architectures": {
                "x64": {
                    "build_env": {
                        "AWS_DOTNET_RUNTIME": "linux-x64"
                    }
                }
            }
        },
        "windows": {
            "architectures": {
                "x86": {
                    "variables": {
                        "platform_target": "x86"
                    }
                },
                "x64": {
                    "variables": {
                        "platform_target": "x64"
                    }
                }
            }
        }
    }
}
